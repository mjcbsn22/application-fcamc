%nav.navbar.navbar-default
  .navbar-header
    - if current_user
      %button.navbar-toggle{data: {toggle: "collapse", target: "#fcamc-top-nav"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    .navbar-brand
      #logo= link_to image_tag('logo.gif'), root_path
  .collapse.navbar-collapse{id: "fcamc-top-nav"}
    - if current_user
      %ul.nav.navbar-nav
        %li
          %a{href: "/"} Home
        %li
          %a{href: "/"} Friends
        %li
          %a{href: "/"} Events
      %form.navbar-form.navbar-left{role: "search"}
        .input-group{style: "width: 226px"}
          %input.form-control{type: "text", placeholder: "Find Friends"}
          %span.input-group-btn
            %button.btn.btn-primary Go!
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}}
            %span.glyphicon.glyphicon-comment
            Chats
            %span.label.label-primary 42
            %ul.dropdown-menu
              %li
                %a{href: "#"}
                  %span.label.label-warning 7:00 AM
                  Hi :)
              %li
                %a{href: "#"}
                  %span.label.label-warning 8:00 AM
                  How are you?
              %li
                %a{href: "#"}
                  %span.label.label-warning 9:00 AM
                  What are you doing?
              %li.divider
              %li
                %a.text-center{href: "#"} View All
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            %span.glyphicon.glyphicon-envelope
            Inbox
            %span.label.label-info 32
          %ul.dropdown-menu
            %li
              %a{href: "#"}
                %span.label.label-warning 4:00 AM
                Favorites Snippet
            %li
              %a{href: "#"}
                %span.label.label-warning 4:30 AM
                Email marketing
            %li
              %a{href: "#"}
                %span.label.label-warning 5:00 AM
                Subscriber focused email design
            %li.divider
            %li
              %a.text-center{href: "#"} View All
        %li.dropdown
          %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
            = current_user.first_name
            %b.caret
          %ul.dropdown-menu
            %li.dropdown-header My Account
            %li= link_to 'Profile', public_profile_path
            %li= link_to 'Settings', account_settings_user_path(current_user)
            %li.divider
            %li= link_to "Log out", logout_path
